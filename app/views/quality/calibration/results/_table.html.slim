.table-responsive
  table.table.table-striped.table-hover.mb-0
    thead.table-dark
      - if show_device
        th.w-1 Device
      th.w-1 User
      th.w-1 Reason Code
      th.text-center.w-1 Calibrated On
      - if specific_type
        - if lookup_context.exists?(specific_type.demodulize.underscore, ["quality/calibration/results"], true)
          = render partial: "quality/calibration/results/#{specific_type.demodulize.underscore}_headers"
        - else
          th Description
      - else
        th Description
      - if allow_options
        th.text-center.w-1 Options
    tbody
      - results.each do |result|
        - next if result.id.blank?
        tr
          - if show_device
            td.align-top = result.device.name
          td.align-top = result.user.name_and_number
          td.align-top = result.reason_code.name if result.reason_code.present?
          td.text-center.align-top = result.calibrated_on.strftime "%m/%d/%y"
          - if specific_type
            - if lookup_context.exists?(specific_type.demodulize.underscore, ["quality/calibration/results"], true)
              = render partial: "quality/calibration/results/#{specific_type.demodulize.underscore}", locals: { result: result }
            - else
              td == result.description
          - else
            td == result.description
          - if allow_options
            td.text-center.align-top
              - if policy(result).destroy?
                = link_to "#{fa "trash-alt"} Delete".html_safe, result, method: :delete, data: { confirm: 'Are you sure?' }, class: ["btn", "btn-sm", "btn-danger"]