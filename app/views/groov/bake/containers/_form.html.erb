
<%= simple_form_for(@groov_bake_container) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.association :load %>
    <%= f.input :description %>
    <%= f.input :bakestand_column %>
    <%= f.input :bakestand_row %>
    <%= f.input :rod_cart_shelf %>
    <%= f.input :rod_cart_position %>
    <%= f.input :oven_shelf %>
    <%= f.input :oven_shelf_tray_position %>
    <%= f.input :oven_shelf_rod_position %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
