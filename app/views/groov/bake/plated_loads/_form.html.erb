
<%= simple_form_for(@groov_bake_plated_load) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.association :load %>
    <%= f.association :as400_shop_order %>
    <%= f.input :number %>
    <%= f.input :department %>
    <%= f.input :out_of_plating_at %>
    <%= f.input :bake_within %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
