= simple_form_for(@result, as: :calibrations_result, url: calibrations_result_path(@result), html: {class: ["vp-gray-form", "my-3"]}) do |f|

  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .row
    .col-12.col-md.mt-3
      = f.input :calibration_type_name, label: "Calibration Type:", as: :string, required: true, disabled: true, input_html: { value: @result.calibration_type.name }
    .col-12.col-md.mt-3
      = f.input :device_name, label: "Device:", as: :string, required: true, disabled: true, input_html: { value: @result.device.name }
    .col-12.col-md.mt-3
      = f.association :reason_code, label: "Reason:", required: true, input_html: { class: "form-select" }
    .col-12.col-md.mt-3
      = f.input :result_on, label: "Date:", required: true, as: :date, html5: true, input_html: { style: "margin: 0 !important;" }

  = render partial: "calibrations/results/#{@result.calibration_type.calibration_method.demodulize.underscore}_fields", locals: { f: f }

  .form-actions
    div
      = link_to "#{fa "times"} Cancel".html_safe, calibrations_results_url, class: ["btn", "btn-light", "btn-sm", "me-3"], tabindex: -1
      = f.button :button, "#{fa "check"} Save Calibration".html_safe, class: ["btn-primary", "btn-sm"]