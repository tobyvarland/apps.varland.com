    = home_page_link("link", "Employee Notes", employee_notes_url, target: "_self")
  = home_page_link("link", "IAO Bakesheets", "http://opto.varland.com/inert/bakesheets")
  = home_page_link("link", "Maintenance Work Orders", "http://maintenance.varland.com")
  = home_page_link("link", "Online Bakesheet", "http://optoapi.varland.com/ovens")
  = home_page_link("link", "Opto Logs", "http://optologs.varland.com")
  = home_page_link("link", "Opto Logs (Old)", "http://vms.varland.com/opto/logs")
  = home_page_link("link", "PM Scheduled Tasks", "http://vms.varland.com/maintenance/scheduled_task_status")
  = home_page_link("link", "QMS", "http://vmsqms.varland.com")
  = home_page_link("link", "Reject Tag", "http://vms.varland.com/qc/rejected_parts/new")
  = home_page_link("link", "Salt Spray", "http://saltspray.varland.com")
  = home_page_link("link", "Shift Notes", shift_notes_url, target: "_self")
