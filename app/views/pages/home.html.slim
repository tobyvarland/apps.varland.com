.row
  .col-12.col-md-6
    form.home-page-form method="get" action="http://vms.varland.com/queries/prop65" target="_blank"
      .icon = fa "link"
      .label
        span Prop 65 Report:
      input type="text" name="customer" maxlength="6" pattern="[A-Z]{1,6}" placeholder="Customer Code ‚èé"
      button.d-none type="submit"
        = fa "arrow-alt-circle-right"

- if current_user
  - if lookup_context.exists?(current_user.username.downcase, ["users/user_home_pages"], true)
    = render partial: "users/user_home_pages/#{current_user.username.downcase}"

javascript:
  $(function() {
    $('input[name="customer"]').on("keyup", function() {
      $this = $(this);
      $this.val($this.val().toUpperCase());
    });
  });